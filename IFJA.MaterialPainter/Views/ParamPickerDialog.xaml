<Window x:Class="MaterRevitAddin.Views.ParamPickerDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="ToolWindow" ResizeMode="NoResize"
        SizeToContent="WidthAndHeight" Title="Choisir un paramètre matériau"
        WindowStartupLocation="CenterOwner">
  <Grid Margin="12">
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="*" />
      <ColumnDefinition Width="*" />
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
      <RowDefinition Height="*" />
      <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>

    <GroupBox Header="Instance" Margin="0,0,6,6">
      <ListBox x:Name="ListInstance" DisplayMemberPath="Definition.Name" />
    </GroupBox>
    <GroupBox Header="Type" Margin="6,0,0,6" Grid.Column="1">
      <ListBox x:Name="ListType" DisplayMemberPath="Definition.Name" />
    </GroupBox>

    <StackPanel Grid.Row="1" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right">
      <Button Content="OK" Width="80" Margin="0,0,6,0" Click="Ok_Click"/>
      <Button Content="Annuler" Width="80" IsCancel="True"/>
    </StackPanel>
  </Grid>
</Window>