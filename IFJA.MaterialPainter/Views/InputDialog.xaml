<Window x:Class="MaterRevitAddin.Views.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="ToolWindow" ResizeMode="NoResize"
        SizeToContent="WidthAndHeight" Title="Entrer un nom"
        WindowStartupLocation="CenterOwner">
  <StackPanel Margin="14">
    <TextBlock x:Name="Prompt" Margin="0,0,0,8"/>
    <TextBox x:Name="Box" Width="360" />
    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
      <Button Content="OK" Width="80" Margin="0,0,6,0" IsDefault="True" Click="Ok_Click"/>
      <Button Content="Annuler" Width="80" IsCancel="True"/>
    </StackPanel>
  </StackPanel>
</Window>